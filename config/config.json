{
    "general": {
        "show_plots": false,
        "save_plots": true,
        "mode": "train",
        "dataset_path": "./data/domain1"
    },
    "preprocessing": {
        "normalization": false,
        "standardization": false,
        "data_augmentation": false
    },
    "noise_adder": {
        "noise_type": "line_segments",
        "salt_pepper_ratio": 0.2,
        "gaussian_mean": 0,
        "gaussian_std": 0.02,
        "line_segment_params": {
            "line_count": 5,
            "line_thickness": 2
        }
    },
    "training": {
        "training_size": 10,
        "validation_size": 2,
        "test_size": 2,
        "seed": 50,
        "batch_size": 1,
        "num_epochs": 8,
        "generator_learning_rate": 0.0001,
        "discriminator_learning_rate": 0.0001,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_cycle": 10.0,
        "lambda_identity": 5.0,
        "loss_function": "BCE",
        "optimizer": "Adam",
        "gradient_clipping": true
    },
    "generator": {
        "input_dim": [128, 128, 1],
        "layers": [
            {
                "type": "conv",
                "out_channels": 64,
                "kernel_size": 7,
                "stride": 1,
                "activation": "ReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 128,
                "kernel_size": 3,
                "stride": 2,
                "activation": "ReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 256,
                "kernel_size": 3,
                "stride": 2,
                "activation": "ReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "residual_block",
                "out_channels": 256,
                "kernel_size": 3,
                "num_blocks": 9,
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv_transpose",
                "out_channels": 128,
                "kernel_size": 3,
                "stride": 2,
                "activation": "ReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv_transpose",
                "out_channels": 64,
                "kernel_size": 3,
                "stride": 2,
                "activation": "ReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 1,
                "kernel_size": 7,
                "stride": 1,
                "activation": "Tanh",
                "batch_norm": false
            }
        ]
    },
    "discriminator": {
        "input_dim": [128, 128, 1],
        "layers": [
            {
                "type": "conv",
                "out_channels": 64,
                "kernel_size": 4,
                "stride": 2,
                "activation": "LeakyReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 128,
                "kernel_size": 4,
                "stride": 2,
                "activation": "LeakyReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 256,
                "kernel_size": 4,
                "stride": 2,
                "activation": "LeakyReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 512,
                "kernel_size": 4,
                "stride": 2,
                "activation": "LeakyReLU",
                "batch_norm": true,
                "dropout": 0.3
            },
            {
                "type": "conv",
                "out_channels": 1,
                "kernel_size": 4,
                "stride": 1,
                "activation": "Sigmoid",
                "batch_norm": false
            }
        ]
    }
}